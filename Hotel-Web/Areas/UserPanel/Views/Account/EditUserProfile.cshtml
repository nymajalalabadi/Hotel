@using Hotel_Domain.ViewModels.Account
@model EditUserProfileViewModel

@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

@section styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
}

@section Header
{
    <partial name="_PartialSecoundHeader" />
}

<main>
    <div class="container">
        <div class="row justify-content-center align-items-center page-section ">
            <div class="col-lg-12 col-md-12 col-xl-12">
                <div class="px-4">
                    <h5>@ViewData["Title"]</h5>
                    <form asp-area="UserPanel" asp-controller="Account" asp-action="EditUserProfile" method="post" class="pt-4">
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="mb-3 form-group ">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control text-start">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group ">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control text-start" >
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group ">
                            <label asp-for="LastName"></label>
                            <input type="text" asp-for="LastName" class="form-control text-start">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mt-4 d-grid gap-2 under-score position-relative">
                            <button type="submit" class="btn btn-block btn-outline-danger">ویرایش</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

