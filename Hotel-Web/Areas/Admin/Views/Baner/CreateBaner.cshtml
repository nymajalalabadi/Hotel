@using Hotel_Application.Statics
@using Hotel_Domain.ViewModels.Baner
@model CreateBanerViewModel

@{
    ViewData["Title"] = "ساخت ینر";
}


<div class="container">
    <h2 class="py-3"> ایجاد بنر</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="CreateBaner" asp-controller="Baner" asp-area="admin" method="post" enctype="multipart/form-data">
        <div class="col-12 w-50">
            <div class="mb-3">
                <label asp-for="AvatarImage" class="form-label"></label>
                <input type="file" asp-for="AvatarImage" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BanerTitle" class="form-label"></label>
                <input type="text" asp-for="BanerTitle" class="form-control text-start" placeholder="مثال : تخفیف بگیرید">
                <span asp-validation-for="BanerTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BanerButton" class="form-label"></label>
                <input type="text" asp-for="BanerButton" class="form-control text-start" placeholder="مثال : خرید کنید">
                <span asp-validation-for="BanerButton" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success"> ساخت بنر </button>
            </div>
        </div>
    </form>
</div>

