@using Hotel_Application.Statics
@using Hotel_Domain.ViewModels.HotelGalleries
@model CreateHotelGalleryViewHtml

@{
    ViewData["Title"] = "افزودن تصویر به هتل";
}

<div class="container">
    <h2 class="py-3"> افزودن تصویر به هتل</h2>
    <form asp-area="Admin" asp-controller="Hotel" asp-action="CreateHotelGallery" method="post" enctype="multipart/form-data">
        <input asp-for="HotelId" type="hidden" />
        <div class="row ">
            <div class="mb-3 col-6">
                <label asp-for="AvatarImage" class="form-label"></label>
                <input asp-for="AvatarImage" class="form-control">
                <span asp-validation-for="AvatarImage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success"> افزودن تصویر </button>
            </div>
        </div>
    </form>

</div>

