@using Hotel_Domain.ViewModels.HotelRules
@model CreateHotelRuleViewModel

@{
    ViewData["Title"] = "افزودن قانون به هتل";
}

<div class="container">
    <h2 class="py-3"> افزودن قانون به هتل</h2>
    <form asp-area="Admin" asp-controller="Hotel" asp-action="CreateHotelRule" method="post">
        <input asp-for="HotelId" type="hidden" />
        <div class="row ">
            <div class="mb-3 col-6">
                <label asp-for="Description" class="form-label"></label>
                <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success"> افزودن قانون </button>
            </div>
        </div>
    </form>
</div>

