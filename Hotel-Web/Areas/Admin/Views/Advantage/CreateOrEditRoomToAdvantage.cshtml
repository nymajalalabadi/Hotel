@using Hotel_Domain.Entities.Advantage
@using Hotel_Domain.ViewModels.Advantage
@model EditOrCreateSelectedRoomToAdvantageViewModel

@{
    ViewData["Title"] = "مدیریت ویژگی ها";
    var advantages = ViewData["Advantages"] as List<AdvantageRoom>;
}

<h2 class="py-3">مدیریت ویژگی ها</h2>
<div class="row">
    <div class="col-12">
        <div class="mt-5 mb-3">
            <form asp-area="admin" asp-controller="Advantage" asp-action="CreateOrEditRoomToAdvantage" method="post">
                <input type="hidden" asp-for="RoomId" />
                <div class="row container">
                    @foreach (var item in advantages!)
                    {

                        <div class="form-check col-3">
                            <input class="form-check-input" type="checkbox" @(Model.SelectedAdvantage.Any(x => x == item.Id) ? "checked" : "")
                                   name="SelectedAdvantage" value="@item.Id">
                            <label class="form-check-label">
                                @item.Name
                            </label>
                        </div>

                    }
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success"> ثبت ویژگی </button>
                </div>
            </form>
        </div>
    </div>
</div>

